{% extends "base.html.twig" %}

{% block body %}
    {{  form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
    <div class="container">
        <div id="signupbox" style=" margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title">Enregistrez-vous a l'application LyonCar's</div>
                </div>
                <div class="panel-body" >
                    <form id="signupform" class="form-horizontal" role="form">

                        <div id="signupalert" style="{{ param }}" class="alert alert-danger">
                            {{ form_widget(form._token) }}
                            {% for flashMessage in app.session.flashbag.get('erreur') %}
                                <p>Erreur:</p>
                                <span>{{ flashMessage }}</span>

                            {% endfor %}
                        </div>

                        <fieldset>
                            <legend> Connexion </legend>
                            <div class="form-group">
                                <label for="email" class="col-md-3 control-label">Email</label>
                                <div class="col-md-9">
                                    {{ form_widget(form.mail, {'attr': {'class': 'form-control','name':'email','placeholder':'email'}}) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="login" class="col-md-3 control-label">Nom d'utilisateur</label>
                                <div class="col-md-9">
                                    {{ form_widget(form.login, {'attr': {'class': 'form-control','name':'login','placeholder':'nom d\'utilisateur'}}) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="password" class="col-md-3 control-label">Mot de passe</label>
                                <div class="col-md-9">
                                    {{ form_widget(form.pass, {'attr': {'class': 'form-control','name':'firstname','placeholder':'mot de passe'}}) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="password" class="col-md-3 control-label">Répéter le mot de passe</label>
                                <div class="col-md-9">
                                    {{ form_widget(form.repPass, {'attr': {'class': 'form-control','name':'firstname','placeholder':'Répéter le mot de passe'}}) }}
                                </div>
                            </div>
                        </fieldset>

                        <fieldset>
                            <legend> informations personnelles </legend>
                            <div class="form-group">
                                <label for="birth" class="col-md-3 control-label">Date de naissance</label>
                                <div class="col-md-9">
                                    {{ form_widget(form.birth, {'attr': {'class': 'form-control datepicker','name':'birth','placeholder':'Date de naissances'}}) }}
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="firstname" class="col-md-3 control-label">Nom</label>
                                <div class="col-md-9">
                                    {{ form_widget(form.nom, {'attr': {'class': 'form-control','name':'firstname','placeholder':'nom'}}) }}
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="lastname" class="col-md-3 control-label">Prénom</label>
                                <div class="col-md-9">
                                    {{ form_widget(form.prenom, {'attr': {'class': 'form-control','name':'firstname','placeholder':'Prénom'}}) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="icode" class="col-md-3 control-label">Adresse</label>
                                <div class="col-md-9">
                                    {{ form_widget(form.adresse, {'attr': {'class': 'form-control','name':'firstname','placeholder':'Adresse'}}) }}
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="icode" class="col-md-3 control-label">Téléphone</label>
                                <div class="col-md-9">
                                    {{ form_widget(form.tel, {'attr': {'class': 'form-control','name':'firstname','placeholder':'Téléphone'}}) }}
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="permis" class="col-md-3 control-label">Permis</label>
                                <div class="col-md-9">
                                    {{ form_widget(form.permis, {'attr': {'class': 'form-control','name':'firstname','placeholder':'permis'}}) }}
                                </div>
                            </div>
                        </fieldset>
                        <div class="form-group">
                            <!-- Button -->
                            <div class="col-md-offset-3 col-md-9">
                                {{ form_widget(form.save, { 'label': 'Inscription' ,'attr': {'class': 'form-btn btn-info'}  }) }}
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}

{% block js %}
    <script>
        $( function() {
            $( ".datepicker" ).datepicker();
        } );
    </script>
{% endblock %}